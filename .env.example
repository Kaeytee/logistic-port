# Example environment variables for logistics-portfolio (Next.js)
# Copy this file to .env and fill in your real secrets for production

# API base URL for all backend requests
NEXT_PUBLIC_API_BASE_URL=https://your-production-api.com/api

# JWT and security secrets (never commit real secrets to .env.example)
JWT_SECRET=your_jwt_secret_here
REFRESH_SECRET=your_refresh_secret_here
CSRF_SECRET=your_csrf_secret_here
NEXT_PUBLIC_ENABLE_DUMMY_LOGIN=true
#set the dummy login to true to enable dummy login
#set the dummy login to false to disable dummy login

# OpenRouter API
OPEN_ROUTER_API_URL=https://openrouter.ai/api
OPEN_ROUTER_API_KEY=your_real_openrouter_api_key_here

# AwaitingShipmentTable API handler configuration
# Set DEV_MODE to 'true' to always use dummy data for /api/awaiting-shipments
DEV_MODE=true
# Set the real API URL for production data (leave blank to use dummy data)
REAL_AWAITING_SHIPMENTS_API_URL=

# Other environment variables as needed
# EMAIL_API_KEY=your_email_api_key_here
# SMTP_HOST=smtp.example.com
# SMTP_USER=your_smtp_user
# SMTP_PASS=your_smtp_password
